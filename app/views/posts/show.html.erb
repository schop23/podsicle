<h1 class="logo"><a href="/posts">Podsicle</a></h1>
<h3 class="intro">So, do you listen to podcasts?</h3>

<article>
  <h2 class="title"><%= @post.title %></h2>
  <h5 class ="subject"><%= @post.subject %></h5>
  <time>Updated <%= @post.updated_at %></time>
  <p class="review"><%= @post.review %></p>
  <p class="url"><%= @post.podcast_url %></p>

  <% if current_user == @post.user %>
  <%= link_to "Edit Post", edit_post_path(@post) %>
  <% end %>

  <% if current_user == @post.user %>
    <%= link_to "Delete Post", post_path(@post), method: :delete %>
  <% end %>
  
  <div class='comments'>
  <h3>Comments</h3>
  <%= link_to "Add new comment", new_comment_path(@post) %>
  <% @post.comments.each do |comment| %>
    <div>
      <time>Updated <%= comment.updated_at %></time>
      <p>
	<%= comment.body %>
      </p>
      <% if current_user == comment.user %>
      <%= link_to "Edit", edit_comment_path(@post, comment) %> |
    
      <%= link_to "Delete", comment_path(comment), method: :delete %>
      <% end %>
    </div>
  <% end %>
  </div>
</article>
